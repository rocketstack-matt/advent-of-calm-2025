{
  "nodes": [
    {
      "unique-id": "web-frontend",
      "node-type": "webclient",
      "name": "Web Frontend",
      "description": "User-facing web application"
    },
    {
      "unique-id": "api-service",
      "node-type": "service",
      "name": "API Service",
      "description": "Backend API service"
    },
    {
      "unique-id": "app-database",
      "node-type": "database",
      "name": "Application Database",
      "description": "Primary data storage"
    }
  ],
  "relationships": [
    {
      "unique-id": "frontend-to-api",
      "description": "Frontend calls API",
      "protocol": "HTTPS",
      "relationship-type": {
        "connects": {
          "source": {
            "node": "web-frontend"
          },
          "destination": {
            "node": "api-service"
          }
        }
      }
    },
    {
      "unique-id": "api-to-database",
      "description": "API stores data",
      "protocol": "JDBC",
      "relationship-type": {
        "connects": {
          "source": {
            "node": "api-service"
          },
          "destination": {
            "node": "app-database"
          }
        }
      }
    }
  ],
  "$schema": "https://example.com/patterns/web-app.json"
}